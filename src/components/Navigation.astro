<header class="bg-gray-900 shadow-md text-white">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-white">Swim With JJ</a>
      
      <!-- Mobile menu button -->
      <button id="menu-toggle" class="md:hidden p-2 focus:outline-none text-white" aria-label="Toggle navigation menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      
      <!-- Desktop Navigation -->
      <nav class="hidden md:block">
        <ul class="flex space-x-6">
          <li><a href="/" class="text-white hover:text-blue-300">Home</a></li>
          <li><a href="/about" class="text-white hover:text-blue-300">About</a></li>
          <li><a href="/lesson-info" class="text-white hover:text-blue-300">Lesson Info</a></li>
          <li><a href="/faq" class="text-white hover:text-blue-300">FAQ</a></li>
          <li><a href="/testimonials" class="text-white hover:text-blue-300">Testimonials</a></li>
          <li><a href="/sign-up" class="text-white hover:text-blue-300">Sign-Up</a></li>
          <li><a href="/contact" class="text-white hover:text-blue-300">Contact</a></li>
        </ul>
      </nav>
    </div>
    
    <!-- Mobile Navigation -->
    <nav id="mobile-menu" class="hidden mt-4 md:hidden">
      <ul class="flex flex-col space-y-2">
        <li><a href="/" class="block py-2 text-white hover:text-blue-300">Home</a></li>
        <li><a href="/about" class="block py-2 text-white hover:text-blue-300">About</a></li>
        <li><a href="/lesson-info" class="block py-2 text-white hover:text-blue-300">Lesson Info</a></li>
        <li><a href="/faq" class="block py-2 text-white hover:text-blue-300">FAQ</a></li>
